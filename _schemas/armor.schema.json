{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://daggersearch.com/schemas/armor.schema.json",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "$ref": "./common/id.schema.json"
      },
      "name": {
        "$ref": "./common/localized-string.schema.json"
      },
      "tier": {
        "$ref": "./common/tier.schema.json"
      },
      "baseMajorThreshold": {
        "type": "integer",
        "minimum": 0
      },
      "baseSevereThreshold": {
        "type": "integer",
        "minimum": 0
      },
      "baseScore": {
        "type": "integer",
        "minimum": 0
      },
      "features": {
        "type": "array",
        "items": {
          "$ref": "./common/feature.schema.json"
        }
      }
    },
    "required": [
      "id",
      "name",
      "tier",
      "baseMajorThreshold",
      "baseSevereThreshold",
      "baseScore"
    ],
    "additionalProperties": false
  }
}
