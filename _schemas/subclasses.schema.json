{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://daggersearch.com/schemas/subclasses.schema.json",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "$ref": "./common/id.schema.json"
      },
      "name": {
        "$ref": "./common/localized-string.schema.json"
      },
      "class": {
        "$ref": "./common/class.schema.json"
      },
      "domains": {
        "type": "array",
        "items": {
          "$ref": "./common/domain.schema.json"
        }
      },
      "spellcastTrait": {
        "$ref": "./common/trait.schema.json"
      },
      "foundation": {
        "type": "object",
        "properties": {
          "features": {
            "type": "array",
            "items": {
              "$ref": "./common/feature.schema.json"
            }
          }
        },
        "required": ["features"],
        "additionalProperties": false
      },
      "specialization": {
        "type": "object",
        "properties": {
          "features": {
            "type": "array",
            "items": {
              "$ref": "./common/feature.schema.json"
            }
          }
        },
        "required": ["features"],
        "additionalProperties": false
      },
      "mastery": {
        "type": "object",
        "properties": {
          "features": {
            "type": "array",
            "items": {
              "$ref": "./common/feature.schema.json"
            }
          }
        },
        "required": ["features"],
        "additionalProperties": false
      }
    },
    "required": [
      "id",
      "name",
      "class",
      "domains",
      "foundation",
      "specialization",
      "mastery"
    ],
    "additionalProperties": false
  }
}
